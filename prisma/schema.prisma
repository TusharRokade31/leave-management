generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/* =======================
    ENUMS
======================= */

enum Role {
  EMPLOYEE
  MANAGER
}

enum LeaveType {
  FULL
  HALF
  EARLY
  LATE
  WORK_FROM_HOME
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AttendanceStatus {
  PRESENT
  WFH
  ABSENT
  LEAVE
  HOLIDAY
}

/* =======================
    MODELS
======================= */

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(EMPLOYEE)
  endDate   DateTime? // Strictly used for the offboarding date
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  leaves    Leave[]
  tasks     Task[]

  @@index([email])
}

model Leave {
  id               Int         @id @default(autoincrement())
  userId           Int
  startDate        DateTime
  endDate          DateTime
  startTime        String?
  endTime          String?
  reason           String      @db.Text
  type             LeaveType   @default(FULL)
  days             Int
  status           LeaveStatus @default(PENDING)
  managerComment   String?     @db.Text
  
  lastCommentedAt  DateTime?   // Tracks when the manager last sent feedback

  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // --- Tracking Fields ---
  isEdited         Boolean     @default(false)
  editSummary      String?     @db.Text
  
  // For the Split functionality
  isSplit          Boolean     @default(false)    // True if this was carved out of a multi-day leave
  originalLeaveId  Int?                           // The ID of the parent leave before it was split
  isManagerUpdated Boolean     @default(false)    // True if a manager overrode this specific day
  // -----------------------------------------------

  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([updatedAt])
}

model Task {
  id              Int              @id @default(autoincrement())
  userId          Int
  date            DateTime
  content         String           @db.Text
  managerComment  String?          @db.Text
  
  // Manager assigned tasks with company names and checkboxes
  // Stored as an array of objects: [{ "company": string, "task": string, "isDone": boolean }]
  assignedTasks   Json?            @default("[]") 
  
  status          AttendanceStatus @default(PRESENT)
  isCompleted     Boolean          @default(true)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

model OTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}