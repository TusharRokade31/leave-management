generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Optional: for migrations
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  leaves    Leave[]

  @@index([email])
}

model Leave {
  id        Int         @id @default(autoincrement())
  userId    Int
  startDate DateTime
  endDate   DateTime
  startTime String?     // Added for time tracking
  endTime   String?     // Added for half day time tracking
  reason    String      @db.Text
  type      LeaveType   @default(FULL)
  days      Int
  status    LeaveStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}


model OTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

enum Role {
  EMPLOYEE
  MANAGER
}

enum LeaveType {
  FULL
  HALF
  EARLY
  LATE      // Added LATE for late coming
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}