generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Optional: for migrations
}

/* =======================
   ENUMS
======================= */

enum Role {
  EMPLOYEE
  MANAGER
}

enum LeaveType {
  FULL
  HALF
  EARLY
  LATE
  WORK_FROM_HOME
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AttendanceStatus {
  PRESENT
  WFH
  ABSENT
  LEAVE
  HOLIDAY
}

/* =======================
   MODELS
======================= */

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leaves    Leave[]
  tasks     Task[]

  @@index([email])
}

model Leave {
  id             Int         @id @default(autoincrement())
  userId         Int
  startDate      DateTime
  endDate        DateTime
  startTime      String?
  endTime        String?
  reason         String      @db.Text
  type           LeaveType   @default(FULL)
  days           Int
  status         LeaveStatus @default(PENDING)
  managerComment String?     @db.Text
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Task {
  id          Int              @id @default(autoincrement())
  userId      Int
  date        DateTime
  content     String           @db.Text
  status      AttendanceStatus @default(PRESENT)
  isCompleted Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date]) // One task per user per day
  @@index([date])
}

model OTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}
